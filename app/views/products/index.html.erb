<h1 class="container">index.html</h1>

<div class="container">
  <%= link_to 'New Post', new_product_path, :class=>"btn btn-danger" %>
</div>

<div class="container">
<% @products.each do |product| %>
<div class="products">
  <%= link_to product_path(product) do %>
    <%= image_tag(product.img_url, :width=>100) %> <br>
  <% end %>


<%= product.name %> <br>
<%= product.price %>
<br>
</div>
<% end %>
<!-- <div style="clear: both"></div> -->
<div class="clearfix"></div>
<%= paginate @products %>

</div>